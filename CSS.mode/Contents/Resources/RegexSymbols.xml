<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE syntax SYSTEM "symbol.dtd">
<symbols>

    <blocks>
        <beginregex>{</beginregex>
        <endregex>}</endregex>
    </blocks>
    
	<symbol id="language.include" image="Symbol#">
		<regex>(?i)@import\surl[ \t]*\([ \t]*"(.*?)"[ \t]*\)</regex>
		<regex>(?i)@import\s[ \t]*"(.*?)"[ \t]*</regex>
	</symbol>
	
    <symbol id="language.tag" image="SymbolT">
        <regex>(?:[\n\r\}]|^)[\t ]*(?:/\*.*\*/)*[ \t]*([\w\*][^}{;]*?)\s*(?:\{|/\*.*\*/\s*\{)</regex>
        <postprocess>
            <find>[\n\r]</find>
            <replace> </replace>
            <find>[ \t]+</find>
            <replace> </replace>
            <find>/\*.*\*/</find>
            <replace></replace>
        </postprocess>
        <slicer>
        	<regex>[#\.]([^:\s]+)[ ]*</regex>
        	<capture>value</capture>
        </slicer>
        <captures>{ "value" : "1" }</captures>
    </symbol>
   
    <symbol id="language.class" image="SymbolC" useforautocomplete="yes">
        <regex>(?:[\n\r\}]|^)[\t ]*(?:/\*.*\*/)*[ \t]*([.:][^}{;]*?)\s*(?:\{|/\*.*\*/\s*\{)</regex>
        <postprocess>
            <find>[\n\r]</find>
            <replace> </replace>
            <find>[ \t]+</find>
            <replace> </replace>
            <find>/\*.*\*/</find>
            <replace></replace>
        </postprocess>
        <slicer>
        	<regex>\.([^:\s]+)[ ]*</regex>
        	<capture>value</capture>
        </slicer>
        <captures>{ "value" : "1" }</captures>
    </symbol>
    
    <symbol id="language.id" image="SymbolID" useforautocomplete="yes">
        <regex>(?:[\n\r\}]|^)[\t ]*(?:/\*.*\*/)*[ \t]*(#[^}{;]*?)\s*(?:\{|/\*.*\*/\s*\{)</regex>
        <postprocess>
            <find>[\n\r]</find>
            <replace> </replace>
            <find>[ \t]+</find>
            <replace> </replace>
            <find>/\*.*\*/</find>
            <replace></replace>
        </postprocess>
         <slicer>
        	<regex>\#([^:\s]+)[ ]*</regex>
        	<capture>value</capture>
        </slicer>
        <captures>{ "value" : "1" }</captures>
    </symbol>
    
    <symbol id="Rules" image="SymbolAt">
        <regex>(?:[\n\r\}]|^)[\t ]*(?:/\*.*\*/)*[ \t]*(?i)(@(?:media|screen|keyframes|font-face)\s[^}{;]+)\s*(?:\{|/\*.*\*/\s*\{)</regex>
        <postprocess>
            <find>[\n\r]</find>
            <replace> </replace>
            <find>[ \t]+</find>
            <replace> </replace>
            <find>/\*.*\*/</find>
            <replace></replace>
        </postprocess>
    </symbol>
	
    <symbol id="Pragma marks" font-weight="normal" font-style="normal" image="SymbolMark" indentation="0" ignoreblocks="no" show-in-comments="yes">
        <regex>/\*[ \t]*!(.+)[ \t]*\*/</regex>
        <postprocess>
           <find>[\n\r]</find>
           <replace> </replace>
           <find>[ \t]+</find>
           <replace> </replace>
        </postprocess>
    </symbol>
    
    <symbol id="CSS Groups" font-weight="normal" font-style="normal" image="SymbolGroup" indentation="0" ignoreblocks="no" show-in-comments="yes">
        <regex>/\*[ \t]*(?i)@group[ \t]*(.*?)[ \t]*\*/</regex>
        <postprocess>
           <find>[\n\r]</find>
           <replace> </replace>
           <find>[ \t]+</find>
           <replace> </replace>
        </postprocess>
    </symbol>
    
</symbols>
